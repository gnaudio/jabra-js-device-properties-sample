{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "typescript",
    "outDir": "javascript",
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "removeComments": false,
    "declaration": false
  },
  "include": [
    "typescript/**/*.ts",
  ],
  "exclude": [
    "javascript"
  ]
}